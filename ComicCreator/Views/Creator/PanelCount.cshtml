@{
    ViewBag.Title = "PanelCount";
    Layout = "~/Views/Shared/_Main.cshtml";
}

@using ComicCreator.Models;
@model Creator

<link href="../Content/css/jquery-ui.css" rel="stylesheet" />
<script src="../Content/js/jquery-1.12.4.js"></script>
<script src="../Content/js/jquery-ui.js"></script>

<style>
    .selectPanelCountStyle {
        width: 100%;
        height: 100%;
    }
</style>

<div class="container-fluid no-gutter">

    <div class="row">
        <div class="col rounded" style="background: white;" id="modalPanelCount">
            <h4 class="modal-title">How many panels do you want to create?</h4>
            <div class="row">
                <div class="col-lg-6">
                    <a href="@Url.Action("Index", "Creator", new { scenarioID = Model.scenarioID, panelCount = 1 })">
                        <img src="~/Content/img/panels/panel-1.png" />

                        @*<figure>
                                <img src="#" alt="1 Panel" class="selectPanelCountStyle" />
                                <figcaption>1 Panel</figcaption>
                            </figure>*@
                    </a>
                </div>
                <div class="col-lg-6">
                    <a href="@Url.Action("Index", "Creator", new { scenarioID = Model.scenarioID, panelCount = 2 })">
                        <img src="~/Content/img/panels/panel-2.png" />
                        @*<figure>
                                <img src="#" alt="2 Panel" class="selectPanelCountStyle" />
                                <figcaption>2 Panel</figcaption>
                            </figure>*@
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <a href="@Url.Action("Index", "Creator", new { scenarioID = Model.scenarioID, panelCount = 3 })">
                        <img src="~/Content/img/panels/panel-3.png" />
                        @*<figure>
                                <img src="#" alt="3 Panel" class="selectPanelCountStyle" />
                                <figcaption>3 Panel</figcaption>
                            </figure>*@
                    </a>
                </div>
                <div class="col-lg-6">
                    <a href="@Url.Action("Index", "Creator", new { scenarioID = Model.scenarioID, panelCount = 4 })">
                        <img src="~/Content/img/panels/panel-4.png" />
                        @*<figure>
                                <img src="#" alt="4 Panel" class="selectPanelCountStyle" />
                                <figcaption>2 Panel</figcaption>
                            </figure>*@
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $("#modalPanelCount").dialog({
            modal: true,
            resizable: false,
            closeOnEscape: false,
            width: 500,
            open: function (event, ui) {
                $(".ui-dialog-titlebar-close", ui.dialog | ui).hide();
                $(".ui-dialog-titlebar", ui.dialog | ui).hide();
            }
        });
    });
</script>

