<style type="text/css">

    .pnl
    {
        height: auto;
    }

    .pnlimage
    {
        width:100%;
        height: 400px;
        overflow: hidden;
    }

    .dmDivHolder
    {
        position: relative;
        width: 100%;
        height: 100%; 
        border: 2px solid red;
        overflow: hidden;   
    }

    .imgContext
    {
        width: 60px; 
        height: 60px;
    }

    .createdImgDivStyle
    {
        width: 20%; 
        height: 40%; 
        position: absolute; 
        top: 40%; 
        left: 10%; 
        z-index: 1;
    }

    .createdImgDivStyle:hover
    {
        cursor: move;
    }

    .ui-resizable-helper{
        border: 2px dotted black;
    }

</style>

<style type="text/css">
/* Popup container - can be anything you want */
.popup {
    position: relative;
    display: inline-block;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

/* The actual popup */
.popup .popuptext {
    visibility: hidden;
    width: 160px;
    background-color: #555;
    color: #fff;
    text-align: center;
    border-radius: 6px;
    padding: 8px 0;
    position: absolute;
    bottom: 125%;
    left: 50%;
    margin-left: -80px;
}

/* Popup arrow */
.popup .popuptext::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 50%;
    margin-left: -5px;
    border-width: 5px;
    border-style: solid;
    border-color: #555 transparent transparent transparent;
}

/* Toggle this class - hide and show the popup */
.popup .show {
    visibility: visible;
    -webkit-animation: fadeIn 1s;
    animation: fadeIn 1s;
    z-index: 99;
}
</style>


<div class="container">
    <div class="row">
        <div class="col">
            <h2>@Model.scenarioName.Trim()</h2>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <button class="btn-primary">Add Panel</button>
        </div>
        <div class="col">
            <button class="btn-primary">Publish/Print</button>
        </div>
    </div>
    <br />
    <div class="container-fluid">
        @(new HtmlString(@Model.htmlDefaultPanel))
    </div>
    
</div>

<br />
<br />
<br />

<script>

    function PopupMenu(e)
    {
        var btn = $(e).find('div').attr('id');
        var popup = document.getElementById(btn);
        popup.classList.toggle("show");
    }

    function AddImage(e)
    {
        var src = $(e).find('img').attr('src');
        var name = $(e).find('img').attr('name');
        var imgid = $(e).find('img').attr('id');
        var divholder = document.getElementById("dh" + name);
        var nImgId = imgid + "_" + name;
        var nDivId = "div_" + imgid + "_" + name;

        // create div first
        var ddiv = document.createElement("div");
        ddiv.setAttribute("id", nDivId);
        ddiv.setAttribute("class", "createdImgDivStyle");
        ddiv.setAttribute("onclick", "");

        // create img
        var dimg = document.createElement("img");
        dimg.setAttribute("src", src);
        dimg.setAttribute("id", nImgId);
        dimg.setAttribute("style", "width: 100%; height: 100%;");

        ddiv.append(dimg);
        divholder.append(ddiv);

        $("#" + nDivId).resizable({ aspectRatio:true, autohide:true, animate:true });
        $("#" + nDivId).draggable();
    }

    function AddHelper(e)
    {
        
    }

</script>

