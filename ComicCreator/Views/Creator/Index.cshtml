@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main.cshtml";
}

@using ComicCreator.Models;
@model Creator

@section head
{
    <link href="../Content/css/customprop.css" rel="stylesheet" />
    <link href="../Content/css/popupcontext.css" rel="stylesheet" />
    <link href="../Content/css/jquery-ui.css" rel="stylesheet" />
    <script src="../Content/js/jquery-1.12.4.js"></script>
    <script src="../Content/js/jquery-ui.js"></script>
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>@Model.scenarioName.Trim()</h2>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <button class="btn-primary">Add Panel</button>
        </div>
        <div class="col">
            <button class="btn-primary">Publish/Print</button>
        </div>
    </div>
    <br />
    <div class="container-fluid">
        @(new HtmlString(@Model.htmlDefaultPanel))
    </div>
    
</div>

<br />
<br />
<br />

<script>

    function PopupMenu(e)
    {
        var btn = $(e).find('div').attr('id');
        var popup = document.getElementById(btn);
        popup.classList.toggle("show");
    }

    function AddImage(e)
    {
        var src = $(e).find('img').attr('src');
        var name = $(e).find('img').attr('name');
        var imgid = $(e).find('img').attr('id');
        var divholder = document.getElementById("dh" + name);
        var nImgId = imgid + "_" + name;
        var nDivId = "div_" + imgid + "_" + name;

        // create div first
        var ddiv = document.createElement("div");
        ddiv.setAttribute("id", nDivId);
        ddiv.setAttribute("class", "border");
        ddiv.setAttribute("style", "width: 80px; height: 80px; z-index: 1; position: absolute; top: 50%; left: 20%;");

        // create img
        var dimg = document.createElement("img");
        dimg.setAttribute("src", src);
        dimg.setAttribute("id", nImgId);
        dimg.setAttribute("style", "width: 100%; height: 100%;");
        ddiv.appendChild(dimg);
        divholder.appendChild(ddiv);

        $("#" + nDivId).resizable({ handels: "n, e, s, w" });
        $("#" + nDivId).draggable();
    }

</script>

