@{
    ViewBag.Title = "Comic Creator";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/CustomStyles.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>

    @RenderSection("head", false)

    <style>
        .navbar-bg-blue {
            background-color: #0097e6;
        }

        .navbar {
            font-family: Sabo;
        }
    </style>
</head>
<body>
    <div class="container-fluid no-gutter">
        <nav class="navbar navbar-light navbar-bg-blue">
            <a class="navbar-brand text-white" href="#">
                <img src="~/Content/img/ComicCreator-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                Comic Creator
            </a>
        </nav>
    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>
